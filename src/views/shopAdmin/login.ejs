<section class="max-w-md mx-auto px-4 sm:px-6 py-12">
	<div class="ui-card ui-border rounded-2xl p-6">
		<h1 class="text-2xl font-semibold">Shop Admin</h1>
		<p class="mt-2 ui-muted text-sm">Giriş yapıp ürün ve siparişleri yönetin.</p>

		<% if (error) { %>
			<div class="mt-4 p-3 rounded border border-red-200 dark:border-red-900 bg-red-50 dark:bg-red-950/30 text-red-800 dark:text-red-200 text-sm"><%= error %></div>
		<% } %>

		<form class="mt-6 grid gap-3" method="post" action="/login">
			<label class="grid gap-1 text-sm">
				<span class="ui-muted">E-posta</span>
				<input name="email" type="email" required class="border ui-border bg-[color:var(--bg-elevated)] rounded px-3 py-2" />
			</label>
			<label class="grid gap-1 text-sm">
				<span class="ui-muted">Şifre</span>
				<input name="password" type="password" required class="border ui-border bg-[color:var(--bg-elevated)] rounded px-3 py-2" />
			</label>
			<button class="ui-btn ui-btn-primary" type="submit">Giriş Yap</button>
		</form>
	</div>
</section>
