<!doctype html>
<html lang="tr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="x-apple-disable-message-reformatting" />
		<title>Yeni İletişim Mesajı</title>
	</head>
	<body style="margin:0; padding:0; background-color:#111827; font-family:Arial, Helvetica, sans-serif; color:#e5e7eb;">
		<%
			const nameText = String(fullName || '').trim();
			const emailText = String(email || '').trim();
			const phoneText = String(phone || '').trim();
			const subjectText = String(subject || '').trim();
			const messageText = String(message || '').trim();
			const idText = String(messageId || '').trim();
		%>

		<table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0" style="background-color:#111827; padding:24px 12px;">
			<tr>
				<td align="center">
					<table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0" style="max-width:720px; background-color:#0b1220; color:#e5e7eb; border-radius:16px; overflow:hidden;">
						<%- await include('../partials/brandHeader') %>
						<tr>
							<td style="padding:22px 22px 0 22px;">
								<p style="margin:0; font-size:14px; color:#94a3b8; letter-spacing:0.08em; text-transform:uppercase;">İletişim Talepleri</p>
								<h1 style="margin:10px 0 0 0; font-size:22px; line-height:30px;">Yeni iletişim mesajı</h1>
								<p style="margin:12px 0 0 0; font-size:15px; line-height:24px; color:#cbd5e1;">Müşteriden yeni bir mesaj geldi.</p>
							</td>
						</tr>

						<tr>
							<td style="padding:16px 22px 0 22px;">
								<table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0" style="border:1px solid #334155; background-color:#0f172a; border-radius:12px;">
									<tr>
										<td style="padding:12px 14px;">
											<p style="margin:0; font-size:12px; color:#94a3b8;">Gönderen</p>
											<p style="margin:6px 0 0 0; font-size:14px; color:#f8fafc;"><strong><%= nameText || '—' %></strong></p>
											<p style="margin:8px 0 0 0; font-size:12px; color:#94a3b8;">E-posta</p>
											<p style="margin:6px 0 0 0; font-size:14px; color:#f8fafc;"><strong><%= emailText || '—' %></strong></p>
											<% if (phoneText) { %>
												<p style="margin:8px 0 0 0; font-size:12px; color:#94a3b8;">Telefon</p>
												<p style="margin:6px 0 0 0; font-size:14px; color:#f8fafc;"><strong><%= phoneText %></strong></p>
											<% } %>
										</td>
										<td style="padding:12px 14px;" align="right">
											<p style="margin:0; font-size:12px; color:#94a3b8;">Mesaj ID</p>
											<p style="margin:6px 0 0 0; font-size:12px; color:#cbd5e1;"><span style="font-family:monospace;"><%= idText || '—' %></span></p>
											<% if (subjectText) { %>
												<p style="margin:10px 0 0 0; font-size:12px; color:#94a3b8;">Konu</p>
												<p style="margin:6px 0 0 0; font-size:14px; color:#f8fafc;"><strong><%= subjectText %></strong></p>
											<% } %>
										</td>
									</tr>
								</table>
							</td>
						</tr>

						<tr>
							<td style="padding:18px 22px 22px 22px;">
								<h2 style="margin:0; font-size:16px;">Mesaj</h2>
								<div style="margin-top:10px; border:1px solid #334155; background-color:#0f172a; border-radius:12px; padding:12px; font-size:14px; line-height:22px; color:#cbd5e1; white-space:pre-wrap;"><%= messageText || '—' %></div>
								<p style="margin:18px 0 0 0; font-size:12px; line-height:18px; color:#94a3b8;">Bu e-posta otomatik olarak gönderilmiştir.</p>
								<p style="margin:10px 0 0 0; font-size:12px; line-height:18px; color:#94a3b8;">© <%= year %> <%= brandName %></p>
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
	</body>
</html>
