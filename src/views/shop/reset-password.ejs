<section class="max-w-md mx-auto px-4 sm:px-6 py-10">
	<div class="ui-card ui-border rounded-2xl p-6 sm:p-8">
		<p class="text-xs ui-muted tracking-widest uppercase">Güvenlik</p>
		<h1 class="mt-2 text-2xl font-semibold">Yeni Şifre Belirle</h1>
		<p class="mt-2 ui-muted">Lütfen yeni şifrenizi oluşturun.</p>

		<% if (hasError) { %>
			<div class="mt-4 border ui-border rounded-xl p-3 text-sm">
				<p class="font-semibold">Link geçersiz</p>
				<p class="ui-muted mt-1">Bu sıfırlama linki geçersiz veya süresi dolmuş olabilir.</p>
			</div>
		<% } %>

		<% if (!hasError) { %>
			<form class="mt-6 grid gap-3" method="post" action="/reset-password/<%= encodeURIComponent(token) %>">
				<label class="grid gap-1 text-sm">
					<span class="text-sm ui-muted">Yeni Şifre</span>
					<input name="password" type="password" required minlength="6" autocomplete="new-password" class="border ui-border bg-[color:var(--bg-elevated)] rounded px-3 py-2" />
				</label>
				<label class="grid gap-1 text-sm">
					<span class="text-sm ui-muted">Yeni Şifre (Tekrar)</span>
					<input name="passwordConfirm" type="password" required minlength="6" autocomplete="new-password" class="border ui-border bg-[color:var(--bg-elevated)] rounded px-3 py-2" />
				</label>
				<button type="submit" class="ui-btn ui-btn-primary w-full">Şifreyi Güncelle</button>
			</form>
		<% } %>

		<p class="mt-5 text-sm ui-muted">
			<a class="underline" href="/login">Giriş sayfasına dön</a>
		</p>
	</div>
</section>
