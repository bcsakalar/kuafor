# =============================================
# SERVER / APP
# =============================================
NODE_ENV=development
PORT=5001
APP_BASE_URL=http://localhost:5001
SHOP_BASE_URL=http://shop.localhost:5001
ADMIN_BASE_URL=http://admin.localhost:5001
SHOPADMIN_BASE_URL=http://shopadmin.localhost:5001
LOG_LEVEL=debug

# =============================================
# DATABASE (PostgreSQL)
# =============================================
# Either use DATABASE_URL or individual vars:
# DATABASE_URL=postgres://user:pass@host:5432/dbname
DB_HOST=localhost
DB_PORT=5432
DB_NAME=berber
DB_USER=berber
DB_PASSWORD=your_db_password_here
DB_SSL=false

# Docker-specific (used in docker-compose.yml)
# DB_BIND_ADDR=127.0.0.1
# DB_PUBLISH_PORT=5432

# =============================================
# AUTH / SESSION / SECURITY
# =============================================
SESSION_SECRET=your_random_session_secret_here
CSRF_ENABLED=true
# CSP_ALLOW_UNSAFE_INLINE=false
# CORS_ORIGIN=http://localhost:5001
# PASSWORD_RESET_TOKEN_TTL_MINUTES=60

# =============================================
# ADMIN
# =============================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password_here
ADMIN_FULL_NAME=Admin
ADMIN_HOSTNAME_PREFIX=admin
ADMIN_PATH_PREFIX=/admin
# ADMIN_IMAGE_UPLOAD_MAX_BYTES=5242880

# =============================================
# EMAIL (Brevo / Sendinblue)
# =============================================
BREVO_API_KEY=your_brevo_api_key_here
EMAIL_FROM_EMAIL=noreply@example.com
EMAIL_FROM_NAME=Berber
EMAIL_INFO_EMAIL=info@example.com
CONTACT_NOTIFY_TO_EMAIL=admin@example.com
BOOKING_NOTIFY_TO_EMAIL=admin@example.com
SHOP_NOTIFY_TO_EMAIL=admin@example.com
SHOP_CONTACT_NOTIFY_EMAIL=admin@example.com
SHOP_LOW_STOCK_NOTIFY_EMAIL=admin@example.com
SITE_BRAND_NAME=Berber

# =============================================
# BOOKING (Appointments)
# =============================================
BOOKING_CONTACT_PHONE=+905XXXXXXXXX
# PAST_APPOINTMENTS_RETENTION_DAYS=90

# =============================================
# PAYMENT (Iyzico)
# =============================================
IYZICO_API_KEY=your_iyzico_api_key_here
IYZICO_SECRET_KEY=your_iyzico_secret_key_here
IYZICO_URI=https://sandbox-api.iyzipay.com
# IYZICO_DEFAULT_IDENTITY_NUMBER=11111111111
# IYZICO_DEFAULT_CITY=Istanbul
# IYZICO_DEFAULT_COUNTRY=Turkey
# IYZICO_DEFAULT_ZIP=34000

# Payment sync jobs
# PAYMENT_SYNC_ENABLED=true
# PAYMENT_SYNC_INTERVAL_MS=60000
# PAYMENT_SYNC_SINCE_MINUTES=30
# PAYMENT_SYNC_LIMIT=50
# RECONCILIATION_INTERVAL_MS=3600000
# RECONCILIATION_DAYS_BEFORE=7
# RECONCILIATION_LIMIT=100

# =============================================
# GOOGLE OAuth / Calendar
# =============================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://admin.localhost:5001/google/callback
# GOOGLE_REDIRECT_URIS=

# Shop Google OAuth (separate credentials)
# SHOP_GOOGLE_CLIENT_ID=
# SHOP_GOOGLE_CLIENT_SECRET=
# SHOP_GOOGLE_REDIRECT_URI=
# SHOP_GOOGLE_REDIRECT_URIS=

# =============================================
# reCAPTCHA (v3)
# =============================================
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
# RECAPTCHA_MIN_SCORE=0.5

# =============================================
# SHOP
# =============================================
SHOP_HOSTNAME_PREFIX=shop
SHOP_ADMIN_HOSTNAME_PREFIX=shopadmin
