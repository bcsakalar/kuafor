{
  "name": "berber-salon",
  "version": "1.0.0",
  "private": true,
  "description": "Unisex Beauty Salon & Barber Shop - Express/EJS/Postgres",
  "main": "src/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node --watch-path src src/server.js",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "lint": "node -c src/server.js && node -c src/models/orderModel.js",
    "db:migrate": "cross-env NODE_ENV=development node scripts/db-migrate.js",
    "db:migrate:prod": "cross-env NODE_ENV=production node scripts/db-migrate.js",
    "db:indexes": "cross-env NODE_ENV=development node scripts/db-migrate-indexes.js",
    "db:indexes:prod": "cross-env NODE_ENV=production node scripts/db-migrate-indexes.js",
    "db:delete-products": "cross-env NODE_ENV=development node scripts/delete-products.js",
    "db:delete-products:prod": "cross-env NODE_ENV=production node scripts/delete-products.js",
    "brevo:test:prod": "cross-env NODE_ENV=production node scripts/brevo-test.js --verify-only",
    "brevo:send:prod": "cross-env NODE_ENV=production node scripts/brevo-test.js --send",
    "email:smoke": "cross-env NODE_ENV=development node scripts/email-smoke-test.js --render-only",
    "email:smoke:prod": "cross-env NODE_ENV=production node scripts/email-smoke-test.js --render-only",
    "catalog-to-import": "node scripts/catalog-to-import.js",
    "css:build": "postcss css/tailwind-input.css -o public/css/tailwind.css"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "googleapis": "^144.0.0",
    "helmet": "^7.1.0",
    "iyzipay": "^2.0.61",
    "luxon": "^3.7.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "pg": "^8.13.1",
    "postman-request": "^2.88.1-postman.40",
    "roboto-regular": "^1.0.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.3",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "socket.io-client": "^4.8.3",
    "tailwindcss": "^4.1.18"
  }
}
